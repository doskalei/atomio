#auth
  background rgba(0,0,0,0.6)
  div#topbuttons
    display block
    height auto
    margin 200px auto 0
    button
      display inline-block
      vertical-align top
      width 130px
      height 36px
      margin-left 7px
      padding 0
      border none
      background none
      font-size 20px
      color main-orange
  .double
    width 300px 

  #login
    width 300px 
    margin 200px auto 0
    a
      display block
      font-size 20px
      text-align center
      font-weight bold
      color white
      cursor pointer
      &:hover
        color main-orange
      &:active
        color main-orange
      &:focus
        color main-orange
    form
      display block
      width 100%
      height auto
      #response
        width 0
        height 4px
        margin 6px auto
        background white
    hr
      width 310px
      margin 20px auto
  #check
    width 300px 
    margin auto
    a
      display block
      font-size 20px
      text-align center
      font-weight bold
      color white
      cursor pointer
      &:hover
        color main-orange
      &:active
        color main-orange
      &:focus
        color main-orange
    form
      display none
      width 100%
      height auto
      *
        display block
        width 100%
        margin 15px auto
        text-align center

  #join
    display none
    width 300px 
    margin 200px auto 0
    h2
      font-size 20px
      text-align center
      font-weight bold
      cursor pointer
      color main-orange
    h3
      text-align center
      font-weight bold
      color white
      margin 10px auto
    form
      display block
      width 100%
      height auto
      *
        display block
        width 100%
        margin 15px auto
        text-align center

  #console
    position absolute
    top 380px
    width 100%
    height 180px